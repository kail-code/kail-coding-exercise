daemon off;
worker_processes auto;

events {
    worker_connections 1024;
}

http {
    include mime.types;
    default_type application/octet-stream;

    server {
        listen <%= ENV['PORT'] %> default_server;
        server_name _;

        root /app/packages/frontend/dist;
        index index.html;

        location / {
            try_files $uri $uri/ /index.html;
        }
    }
}